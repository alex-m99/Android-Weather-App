<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#080807"
    tools:context=".WeatherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

         <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_file"
            android:hint="Enter city name"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:padding="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableStart="@drawable/location_city"
            android:layout_marginStart="25dp"
            android:id="@+id/editTextCityName"
            android:inputType="textPersonName"/>

        <Button
            android:id="@+id/search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/search"
            android:text="searching" />


    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout_weather"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCityWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:text="Bucharest, RO"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginStart="25dp"
                android:scaleType="fitXY"
                android:id="@+id/imageViewWeather"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation = "vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTempWeather"
                    android:text="25 C"
                    android:textSize="50sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewWeatherConditionWeather"
                    android:text="Few Clouds"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:text="Details :"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max. Temp."
                    android:textColor="#A7B3CC"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min. Temp"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=": 50%"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp"
                    android:id="@+id/textViewHumidityWeather"/>

                <TextView
                    android:id="@+id/textViewMaxTempWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=": 25 C"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewMinTempWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=": 25 C"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewPressureWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=": 50"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewWindWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=": 5"
                    android:textColor="#A7B3CC"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    </LinearLayout>

</LinearLayout>



  </LinearLayout>